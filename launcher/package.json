{
    "name": "tm-launcher",
    "version": "1.0.0",
    "description": "Server Launcher for Trade Management System",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder --win portable"
    },
    "dependencies": {
        "kill-port": "^2.0.1"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "electron-packager": "^17.1.2"
    },
    "build": {
        "appId": "com.tm.launcher",
        "productName": "Trade Management Launcher",
        "win": {
            "target": "portable"
        },
        "directories": {
            "output": "dist"
        }
    }
}
